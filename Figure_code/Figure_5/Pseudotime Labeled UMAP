# Requires setup from Figure_code/Setup/Setup.R before running.

library(monocle3)
#have to load in CDS object
# Plot the CDS object (cdsfull) with pseudotime as the color, without trajectory
plot_cells(
    cds = cds_full_monocle3_object_bacher,
    color_cells_by = "pseudotime",  # Color cells by pseudotime
    show_trajectory_graph = FALSE  # Turn off trajectory lines
) + 
    labs(title = "Pseudotime Plot")  # Add title to the plot
#================================================
#or try this if no monocle!

# Load necessary libraries
library(Seurat)
library(ggplot2)

# Plot UMAP with pseudotime coloring
ggplot(RealBatchCorrectedBacherSeurat@meta.data, aes(x = UMAP_1, y = UMAP_2, color = pseudotime)) +
  geom_point(size = 0.5) +
  scale_color_viridis_c(option = "plasma") +  # Use a color palette similar to the one in the image
  theme_minimal() +
  labs(title = "Pseudotime Plot", x = "UMAP 1", y = "UMAP 2", color = "pseudotime") +
  theme(legend.position = "right")
